@model application.Models.AccountModels.ForgotPasswordModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form asp-action="ForgotPassword" method="post">
    <div class="card">
        <div class="card-header bg-primary">
            <h2 class="text-white">Заборавен пасворд</h2>
        </div>
        <div class="card-body">
        <div class="col-md-3 col-6">
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <label asp-for="Email"></label>
            </div>
        </div>
        <input type="submit" class="btn btn-primary" value="Испрати" />
        </div>
        </div>
</form>
<p class="col-12 text-center text-danger">@Html.ValidationMessage("Error")</p>
<h4 class="col-12 text-center text-success">@Html.ValidationMessage("Success")</h4>