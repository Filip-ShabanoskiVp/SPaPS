@model IEnumerable<application.Models.AccountModels.ChangeUserInfoModel>

@{
    ViewData["Title"] = "UserInfos";
}


<div class="card">
    <div class="card-header bg-primary">
        <h1 class="text-white">Мој Информации</h1>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClientTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CityId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CountryId)
                    </th>
                </tr>
            </thead>
            <tbody>
                 <tr>
                    <td>@ViewBag.infos.Email</td>
                    <td>@ViewBag.infos.Name</td>
                    <td>@ViewBag.infos.Address</td>
                    <td>@ViewBag.infos.PhoneNumber</td>
                    <td>@ViewBag.infos.IdNo</td>
                    <td>@ViewBag.descType</td>
                    <td>@ViewBag.descCity</td>
                    <td>@ViewBag.descCountry</td>
                 </tr>
            </tbody>
        </table>
        <a asp-action="ChangeUserInfo" asp-controller="Account">Измени информации</a>
    </div>
</div>
