@model IEnumerable<application.Models.Request>

@{
    ViewData["Title"] = "Index";
}


<div class="card" style="width: 100vw;position: relative;left: calc(-50vw + 50%);">
    <div class="card-header bg-primary">
        <h1 class="text-white">Index</h1>
    </div>
    <div class="card-body">
        @if(User.IsInRole("Корисник"))
        {
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        }
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequestDate)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BuildingTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BuildingSize)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FromDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ToDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfWindows)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDoors)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Service)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContractorId)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestDate)
                        </td>
                        <td>
                            @if (ViewBag.br == 1)
                            {
                                @if (item.BuildingTypeId == 12)
                                {
                                    @ViewBag.BuildingTypeId[0]
                                }
                                else if (item.BuildingTypeId == 13)
                                {
                                    @ViewBag.BuildingTypeId[0]
                                }
                            }
                            else if (ViewBag.br > 1)
                            {
                                if (item.BuildingTypeId == 12 && @ViewBag.BuildingTypeId[0] == "Куќа"){
                                    @ViewBag.BuildingTypeId[0]
                                }
                                else if (item.BuildingTypeId == 13 && @ViewBag.BuildingTypeId[0] == "Зграда")
                                {
                                    @ViewBag.BuildingTypeId[0]
                                }
                                else if (item.BuildingTypeId == 12 && @ViewBag.BuildingTypeId[1] == "Куќа")
                                {
                                    @ViewBag.BuildingTypeId[1]
                                }
                                else if (item.BuildingTypeId == 13 && @ViewBag.BuildingTypeId[1] == "Зграда")
                                {
                                    @ViewBag.BuildingTypeId[1]
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BuildingSize)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FromDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ToDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Note)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfWindows)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDoors)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContractorId)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
